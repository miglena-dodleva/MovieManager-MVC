
@model MovieManager.ViewModels.Genres.EditVM
@{
    this.Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["title"] = "Edit Genre";
}


<div id="create-div" class="genre-box">
    <form id="create-form" action="/Genres/Edit" method="post">
        @Html.HiddenFor(x => x.Id);
        <div class="genre-banner">
            <h1 id="create-h1">Edit Genre</h1>
        </div>

        <div class="genre-item">
            <p id="create-p">Genre's Name:</p>
            @Html.ValidationMessageFor(x => x.Name)
            <input id="create-input" type="text" placeholder="Enter Name" name="name" value="@Html.DisplayFor(x => x.Name, new { @style = "field-validation-error" })">
        </div>

        <div class="btn-block">
            <input id="create-button" type="submit" value="Edit" />
             <a id="create-button" href="/Genres/Index">Back</a>
       
        </div>
    </form>
</div>











